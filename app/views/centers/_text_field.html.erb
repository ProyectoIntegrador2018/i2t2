<div class="input-group field row">
  <label class="col-sm-2 col-form-label"><%="#{tag}"%></label>
  <div class="col-sm-10">
    <% if required_field %>
      <%= form.text_field sym, class:"form-control  #{center.errors.include?(sym) ? 'is-invalid' : 'is-valid' if center.errors.any?}", placeholder:"#{tag}" %>
    <% else %>
      <%= form.text_field sym, class:"form-control", placeholder:"#{tag}" %>
    <% end %>
  </div>
</div>
