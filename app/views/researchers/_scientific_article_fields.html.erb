<div class="nested-fields">
  <div class="form-group">
    <label>Nombre de la publicación:</label>
    <%= f.text_field :title, class:"form-control", placeholder: "Ej: Resultados de la investigación de nanoparticulas" %>
  </div>
  <div class="form-group">
    <label>Co-Autor(es)*:</label>
    <%= f.text_field :authors, class:"form-control", placeholder: "Ej: Andres López, Rocío Suárez, et al." %>
    <div>
      <small>
        * Se considera que el autor del artículo científico es la
        cuenta registrante.
      </small>
    </div>
  </div>
  <div class="form-group">
    <label>Fecha de publicación:</label>
    <%= f.date_field :publication_date, class:"form-control", placeholder: "Ej: 10/15/2018" %>
  </div>

  <div class="row">
    <div class="form-group col">
      <label>Revista:</label>
      <%= f.text_field :magazine, class:"form-control", placeholder: "Ej: Natgeo, Muy Interesante, etc." %>
    </div>
    <div class="form-group col">
      <label>Volumen:</label>
      <%= f.text_field :volume, class:"form-control", placeholder: "Ej: Vol. 221" %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col">
      <label>Número:</label>
      <%= f.number_field :number, class:"form-control", placeholder: "Ej: 100" %>
    </div>
    <div class="form-group col">
      <label>Páginas (primera - ultima):</label>
      <div class="row">
        <div class="col"><%= f.number_field :first_page, class:"form-control", placeholder: "Ej: p.100" %></div>
        <div class="col"><%= f.number_field :last_page, class:"form-control", placeholder: "Ej: p.108" %></div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="inputDoi">DOI:</label>
    <%= f.text_field :doi, class:"form-control", placeholder: "Digital Object Identifier System Code" %>
  </div>
  <div class="form-group">
    <label for="inputLink">Link:</label>
    <%= f.text_field :link, class:"form-control", placeholder: "Liga al artículo en caso de ser un artículo en línea" %>
  </div>

  <div>
    <%= f.check_box :_destroy, hidden: true %>
    <%= link_to_remove_association "Remover", f, class:"btn btn-outline-warning" %>
  </div>

  <hr />
</div>
