<body>
  <div id="content">
  
    <div class="container">
      <div class="card">
        <article class="card-body">

          <h2>Registro</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :name, 'Nombre Completo', class: "col-form-label" %> <br>
            <%= f.text_field :name, :class => "form form-control form-group" %>
          </div>

          <div class="form-group">
            <%= f.label :email ,class: " col-form-label"%> <br >
            <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control", placeholder:"..@email.com"%>
          </div>

          <div class="form-group">
            <%= f.label :password , 'Contraseña',class: " col-form-label"%> <br>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br >
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"******" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation , 'Confirmación de contraseña',class: "col-form-label"%> <br>
            <%= f.password_field :password_confirmation, class:"form-control",autocomplete: "new-password" , placeholder:"******" %>
          </div>

          <div class="form-group">
            <%= f.label :organization, 'Organización', class: "col-form-label" %> <br>
            <%= f.text_field :organization, :class => "form form-control form-group" %>
          </div>

          <div class="form-group">
            <%= f.label :job, 'Puesto', class: "col-form-label" %> <br>
            <%= f.text_field :job, :class => "form form-control form-group" %>
          </div>

          <div class="form-group">
            <%= f.label :contact_telephone, 'Teléfono de Contacto', class: "col-form-label" %> <br>
            <%= f.text_field :contact_telephone, :class => "form form-control form-group" %>
          </div>

          <div class="form-group">
            <%= f.label :office_telephone, 'Teléfono de Oficina', class: "col-form-label" %> <br>
            <%= f.text_field :office_telephone, :class => "form form-control form-group" %>
          </div>

          <div class="form-group">
            <%= f.label :role, 'Rol',class: "col-form-label" %> <br>
            <%= f.select(:role, User.roles.keys.map {|role| [role.titleize,role]}, { :class => "form form-control form-group"}) %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up" ,class:"btn btn-primary"%>
          </div>
          <% end %>
          <br>

          <%= render "devise/shared/links" %>

        </article>
      </div>
    <!-- Card -->
    </div>
  </div>
</body>

