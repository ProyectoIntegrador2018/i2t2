<p id="notice"><%= notice %></p>

<h1>Scientific Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Authors</th>
      <th>Publication date</th>
      <th>Magazine</th>
      <th>Volume</th>
      <th>Number</th>
      <th>First page</th>
      <th>Last page</th>
      <th>Doi</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scientific_articles.each do |scientific_article| %>
      <tr>
        <td><%= scientific_article.title %></td>
        <td><%= scientific_article.authors %></td>
        <td><%= scientific_article.publication_date %></td>
        <td><%= scientific_article.magazine %></td>
        <td><%= scientific_article.volume %></td>
        <td><%= scientific_article.number %></td>
        <td><%= scientific_article.first_page %></td>
        <td><%= scientific_article.last_page %></td>
        <td><%= scientific_article.doi %></td>
        <td><%= scientific_article.link %></td>
        <td><%= link_to 'Show', scientific_article %></td>
        <td><%= link_to 'Edit', edit_scientific_article_path(scientific_article) %></td>
        <td><%= link_to 'Destroy', scientific_article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Scientific Article', new_scientific_article_path %>
