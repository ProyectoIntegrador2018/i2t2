<div class="container">
  <h1>Usuarios</h1>

  <% if current_user %>

  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Correo</th>
        <th>Rol</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <% if current_user.id == user.id%>
      	<b>
  	<% end %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <%if can? :update, user %> <td><%= link_to 'Editar', admin_edit_user_path(user) %></td> <% end %>
          <%if can? :destroy, user %> <td><%= link_to 'Eliminar', admin_destroy_user_path(user) ,data: { confirm: 'Seguro que quieres eliminar el usuario?' }, method: :delete %></td> <% end %>
        </tr>
      <% if current_user.id == user.id%>
      	</b>
  	<% end %>
      <% end %>
    </tbody>
  </table>

  <% if current_user.admin? %>
    <h4>Importar usuarios</h4>
    <%= form_tag import_users_path, multipart: true do %>
      <%= file_field_tag :file, accept: 'text/csv' %>
      <%= submit_tag "Importar CSV" %>
    <% end %>
  <% end %>
<% end %>

