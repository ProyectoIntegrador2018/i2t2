<body>
  <div id="content">

    <div class="container">
      <div class="card">
        <article class="card-body">

          <h2 >Log in</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="form-group">
              <%= f.label :email, class: "col-sm-2 col-form-label"%><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control", placeholder:"..@email.com"%>
            </div>

            <div class="form-group">
              <%= f.label :password, 'ContraseÃ±a', class: "col-sm-2 col-form-label" %><br />
              <%= f.password_field :password, autocomplete: "current-password",class:"form-control", placeholder:"****"%>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check">
                <%= f.check_box :remember_me, class:"form-check-input"%>
                <%= f.label :remember_me, class:"form-check-label" %>
              </div>
            <% end %>
            <br>
            <div class="actions">
              <%= f.submit "Log in", class:"btn btn-primary" %>
            </div>
          <% end %>
          <br>
          <%= render "devise/shared/links"%>
        </article>
      </div>
      <!-- Card -->
    </div>
  </div>
</body>