<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Investigadores</h1>

  <table class="table mt-5">
    <thead>
      <tr>
        <th>Nombre</th>
        <th># de Articulos Cient.</th>
        <th># de Propiedades Int.</th>
        <th>Visualizar</th>
        <th>Acciones</th>
      </tr>
    </thead>

    <tbody>
      <% @researchers.each do |researcher| %>
        <tr>
          <td><%= researcher.user.name %></td>
          <td><%= researcher.scientific_articles.size %></td>
          <td><%= researcher.intellectual_properties.size %></td>
          <td><%= link_to 'Detalle', researcher %></td>
          <%if can? :update, researcher %>
            <td>
              <%= link_to 'Editar', edit_researcher_path(researcher) %> /
              <%= link_to 'Eliminar', researcher, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%if can_create_researcher %>
    <%= link_to 'Llenar registro de Investigador', new_researcher_path %>
  <% end %>
</div>