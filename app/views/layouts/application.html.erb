<!DOCTYPE html>
<html>
  <head>
    <title>I2t2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="#">SEIICIT</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to 'Centros de investigación', centers_path, class: "nav-link" %>
          </li>
          <% if current_user&.superadmin? || current_user&.admin? %>
            <li>
              <%= link_to 'Usuarios', users_path, class: "nav-link" %>
            </li>
            <li>
              <%= link_to 'Dashboard', rails_admin_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
        <% if current_user.nil? %>
          <%= link_to 'Iniciar Sesión', new_user_session_path, class:"btn btn-outline-primary" %>
        <% else %>
          <p class="text-muted m-0 mr-2">
            <%= current_user.email %>
            <span class="badge badge-secondary text-monospace"><%= current_user.role %></span>
          </p>
          <%= link_to 'Cerrar Sesión', destroy_user_session_path, class:"btn btn-outline-secondary" , method: :delete %>
        <% end %>
      </div>
    </nav>
    <%= render 'layouts/alerts' %>
    <%= yield %>
  </body>
</html>
